<h1>Your Dashboard</h1>

<h2>Your Upcoming Events</h2>
<ul>
  <% @participations.each do |p| %>
    <%= render "events/event", event: p.event %>
  <% end %>
</ul>
<h2>Your Recent Posts</h2>
<ul>
  <% @recent_posts.each do |post| %>
    <li>
      <%= post.content %>
      <small>(<%= post.created_at.strftime("%b %d, %Y") %>)</small>
    </li>
  <% end %>
</ul>
