<div class="container text-center">
  <h1>Welcome to Chacha!</h1>
  <p>Your new event management platform.</p>

  <% unless user_signed_in? %>
    <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-primary" %>
    <%= link_to "Login", new_user_session_path, class: "btn btn-secondary" %>
  <% else %>
    <p>You are logged in as **<%= current_user.email %>**.</p>
    <%= link_to "View My Events", "#", class: "btn btn-success" %>
    <%= link_to "Logout", destroy_user_session_path, data: { turbo_method: :delete }, class: "btn btn-outline-danger" %>
  <% end %>
</div>
