<h1>Welcome to the App</h1>

<% if current_user %>
  <p>Hello <%= current_user.name %>!</p>
  <%= link_to "Go to My Dashboard", user_path(current_user), class: "btn btn-primary" %>
<% else %>
  <p>You are not signed in.</p>
  <%= link_to "Sign In", new_user_session_path %>
<% end %>

<hr>

<h2>Upcoming Events</h2>
<ul>
  <% @events&.each do |event| %>
    <li>
      <strong><%= link_to event.location, event_path(event) %></strong>
      â€” <%= event.starts_on&.strftime("%b %d, %Y") %>
    </li>
  <% end %>
</ul>
