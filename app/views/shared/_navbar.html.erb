<nav class="navbar-lewagon navbar">
  <div class="navbar-brand">
    <%= link_to root_path do %>
      <span class="navbar-logo-text">ChaCha</span>
    <% end %>
  </div>

  <div class="navbar-links">

    <% if user_signed_in?
%>
      <%= link_to "Create Event", new_event_path, class: "navbar-link" %>

