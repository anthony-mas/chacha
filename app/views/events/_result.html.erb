<%# app/views/events/_result.html.erb %>

<div class="results-title mb-3">
  <h2>Generated illustrations</h2>
  <p class="text-muted">Based on your event themes.</p>
</div>

<div class="results-grid">
  <% results.each do |result| %>
    <div class="result-card">
      <%# result[:theme] et result[:image_url] supposÃ©s venir du service %>
      <p class="result-theme"><%= result[:theme] %></p>
      <div class="result-image-wrapper">
        <img src="<%= result[:image_url] %>" alt="<%= result[:theme] %> illustration">
      </div>
    </div>
  <% end %>
</div>
