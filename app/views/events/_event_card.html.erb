<%# Renders a single event preview card for the index view %>
<div class="event-card">
  <%= link_to event_path(event), class: "event-card-link" do %>
    <div class="event-hero-image placeholder-box">
      <span class="placeholder-icon">üñºÔ∏è</span>
    </div>

    <div class="event-card-details">
      <h3 class="event-card-title"><%= event.title.presence || "Untitled Event" %></h3>

      <%# Date and Time %>
      <p class="event-card-date">
        <%# Format: "Friday 31 December, 18:00" %>
        <%= event.starts_on&.strftime("%A %d %B, %H:%M") %>
      </p>

      <%# FIX: Location is now in a <p> tag using the same class for consistent styling %>
      <p class="event-card-date">
        <%= event.location %>
      </p>
    </div>
  <% end %>
</div>
