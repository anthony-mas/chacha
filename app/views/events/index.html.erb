<div class="my-events-page">
  <header class="dashboard-header">
    <h1>My events</h1>
  </header>

  <% if user_signed_in? %>
    <div class="create-event-link-wrapper">
      <%= link_to new_event_path, class: "btn-primary create-event-btn" do %>
        <i class="fa-solid fa-plus me-2"></i> create a new event
      <% end %>
    </div>

    <% if @events.any? %>
      <div class="event-cards-list">
        <% @events.each do |event| %>
          <%= render "event_card", event: event %>
        <% end %>
      </div>
    <% else %>
      <div class="no-events-glass">
        <p>You don't have any events yet.</p>
        <span class="no-events-emoji">ğŸ‰</span>
      </div>
    <% end %>
  <% else %>
    <div class="no-events-glass">
      <p>You need to log in to see your events.</p>
    </div>
  <% end %>
</div>
